<UserControl x:Class="StockPresentationLib.Views.Criterias"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StockPresentationLib.Views" xmlns:vm="clr-namespace:StockPresentationLib.ViewModel"
             xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="600"
             d:DesignWidth="730"
             Style="{StaticResource Page_Style}">

    <Grid Margin="15">
        <Border CornerRadius="0,20,20,0"
                Background="#212529">
        </Border>
        <Grid>
            <ScottPlot:WpfPlot x:Name="WpfPlotValuation" Margin="0,0,480,350" FontFamily = "/StockPresentationLib;component/Fonts/#Rubik"/>
        </Grid>
        <Grid>
            <ScottPlot:WpfPlot x:Name="WpfPlotMoat" Margin="240,0,240,350" FontFamily = "/StockPresentationLib;component/Fonts/#Rubik"/>
        </Grid>
        <Grid>
            <ScottPlot:WpfPlot x:Name="WpfPlotUnderParam" Margin="480,0,0,350" FontFamily = "/StockPresentationLib;component/Fonts/#Rubik"/>
        </Grid>
    </Grid>
</UserControl>
